<% include nav.ejs %>
<% if (message.length > 0) { %>
    <div class="alert alert-success"><%= message %></div>
<% } %>
<form action="/profile" method="post" >
  <div class="form-group">
    <label for="name" class="form-label">Name:</label>
    <input class="form-control" type="text" value="<%= user.name %>" id="name" name="name" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="city" class="form-label">City:</label>
    <input class="form-control" type="text" value="<%= user.city %>" id="city" name="city" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="state" class="form-label">State:</label>
    <input class="form-control" type="text" value="<%= user.state %>" id="state" name="state" autocomplete="off">
  </div>  
  <button type="submit" class="btn btn-primary">Save</button>
</form>


